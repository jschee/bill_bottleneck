<div class="mr-4 self-start">
	<div class="flex flex-col items-center bg-gray-100 min-w-20">
		<%= button_to votes_path(bill_post_id: bill_post.id, vote_type: "up_vote"),
									method: "post",
								  class: "h-10 flex justify-center items-center w-12 rounded-full m-2 hover:bg-gray-300 outline-none border-none" do %>
			<svg  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 <%= vote_result == "up_vote" ? "voted" : "" %>">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
			</svg>
		<% end %>

		<p class="bg-pink-600 text-white text-center px-4 rounded">
			<strong>
				<% if vote_result.present? %>
					Voted
				<% end %>
			</strong>
		</p>

		<%= button_to votes_path(bill_post_id: bill_post.id, vote_type: "down_vote"),
									method: "post",
								  class: "h-10 flex justify-center items-center w-12 rounded-full m-2 hover:bg-gray-300 outline-none border-none" do %>
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 <%= vote_result == "down_vote" ? "voted" : "" %>">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
			</svg>
		<% end %>
	</div>
</div>