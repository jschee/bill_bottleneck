<div class="mt-16 mx-auto max-w-7xl px-4 sm:mt-24">
	<div class="grid grid-cols-12 gap-4">
		<aside id="sidebar" class="col-span-3 bg-white sticky top-0 p-4 pb-6 h-max">
			<%= render "filter"  %>
		</aside>
		<main id="content" class="col-span-9">
			<%= turbo_frame_tag "bills", target: '_top' do %>
				<%= render "bills", bill_posts: @bill_posts %>
			<% end %>
			<%= turbo_frame_tag "bill-posts-page-#{@pagy.next}",
													loading: :lazy,
													src: pagy_url_for(@pagy, @pagy.next),
													target: "_top" do %>
			<p class="text-center">loading...</p>
			<% end %>
		</main>
	</div>
</div>